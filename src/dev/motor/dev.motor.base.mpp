export module robo:dev.motor.base;

import std;

export namespace robo {
namespace dev {
struct Motor {
    float angle { 0.0f };
    float speed { 0.0f };
    virtual void setTorque(float torque) = 0;

    Motor() = default;
};

template <typename T>
concept motor =
    std::derived_from<T, Motor>;

} // namespace dev
} // namespace robo

